{
    "name": "Machine Learning",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true,
            "upgradePackages": true,
            "username": "torch"
        }
    },
    "runArgs": [
        "--gpus=all",
        "--shm-size=1g"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/torchenv/bin/python"
            },
            "extensions": [
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}