{
    "name": "Machine Learning Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "configureZshAsDefaultShell": true,
            "upgradePackages": true,
            "username": "none"
        },
        "ghcr.io/mazhengcn/devcontainer-features/starship:1": {}
    },
    // ðŸ‘‡ Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylance",
                "ms-python.flake8",
                "ms-python.black-formmater",
                "ms-python.isort"
            ]
        }
    },
    "runArgs": [
        "--gpus='device=1'",
        "--shm-size=1g"
    ]
}